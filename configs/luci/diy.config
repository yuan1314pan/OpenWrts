##################################################
# 核心系统
##################################################
CONFIG_MODULES=y
CONFIG_KERNEL_CGROUP_DEVICE=y
CONFIG_KERNEL_CGROUP_FREEZER=y
CONFIG_CGROUPFS_MOUNT_KERNEL_CGROUPS=y
CONFIG_DOCKER_CGROUP_OPTIONS=y

CONFIG_IPV6=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_coreutils-nohup=y
CONFIG_PACKAGE_opkg=y

##################################################
# LuCI 最小界面
##################################################
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-lib-ip=y
CONFIG_PACKAGE_luci-lib-jsonc=y
CONFIG_PACKAGE_luci-theme-argon=y

CONFIG_LUCI_LANG_en=y
CONFIG_LUCI_LANG_zh-cn=y

##################################################
# 网络与 IPv6
##################################################
CONFIG_PACKAGE_luci-proto-ipv6=y
CONFIG_PACKAGE_dhcp6c=y

##################################################
# Docker / 容器
##################################################
CONFIG_PACKAGE_docker=y
CONFIG_PACKAGE_dockerd=y
CONFIG_PACKAGE_containerd=y
CONFIG_PACKAGE_luci-lib-docker=y
CONFIG_PACKAGE_luci-app-dockerman=y

##################################################
# VPN / 网络代理（核心保留）
##################################################
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_luci-app-smartdns=y
CONFIG_PACKAGE_luci-app-socat=y

##################################################
# 基础工具（文件系统 / 压缩 / 存储）
##################################################
CONFIG_PACKAGE_tar=y
CONFIG_PACKAGE_unzip=y
CONFIG_PACKAGE_fdisk=y
CONFIG_PACKAGE_lsblk=y
CONFIG_PACKAGE_mount-utils=y
CONFIG_PACKAGE_parted=y

##################################################
# 可选优化与系统设置
##################################################
CONFIG_TARGET_ROOTFS_PARTSIZE=1024
CONFIG_ZSTD_OPTIMIZE_O3=y

##################################################
# 注释掉非必要模块（例如 USB、额外 LuCI 插件、额外语言包）
##################################################
# CONFIG_PACKAGE_luci-theme-kucat is not set
# CONFIG_PACKAGE_luci-app-advancedplus is not set
# CONFIG_PACKAGE_luci-app-quickstart is not set
# CONFIG_PACKAGE_luci-app-kucat-config is not set
# CONFIG_PACKAGE_luci-i18n-advancedplus-zh-cn is not set
# CONFIG_PACKAGE_luci-i18n-quickstart-zh-cn is not set
# CONFIG_PACKAGE_luci-i18n-kucat-config-zh-cn is not set
# CONFIG_PACKAGE_luci-i18n-smartdns-zh-cn is not set
# CONFIG_PACKAGE_luci-i18n-istorex-zh-cn is not set
# CONFIG_PACKAGE_luci-i18n-socat-zh-cn is not set
# CONFIG_PACKAGE_luci-i18n-tailscale-zh-cn is not set
# CONFIG_PACKAGE_sing-box is optional, 可按需保留
