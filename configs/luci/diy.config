#ok
CONFIG_PACKAGE_luci-app-socat=y
CONFIG_PACKAGE_luci-app-quickstart=y
CONFIG_PACKAGE_luci-app-netwizard=y
CONFIG_PACKAGE_luci-app-webadmin=y
CONFIG_PACKAGE_luci-app-store=y
CONFIG_PACKAGE_luci-app-tailscale=y


#CONFIG# 启用的包
#CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_luci-app-smartdns=y
#CONFIG_FEED_passwall2=y

# 启用的中文语言包
CONFIG_PACKAGE_luci-i18n-smartdns-zh-cn=y
CONFIG_PACKAGE_luci-i18n-socat-zh-cn=y
CONFIG_PACKAGE_luci-i18n-quickstart-zh-cn=y
CONFIG_PACKAGE_luci-i18n-netwizard-zh-cn=y
CONFIG_PACKAGE_luci-i18n-webadmin-zh-cn=y
CONFIG_PACKAGE_luci-i18n-kucat-config-zh-cn=y

# 注释掉暂时不需要的包

#CONFIG_PACKAGE_luci-app-partexp=y

#CONFIG_PACKAGE_luci-i18n-passwall-zh-cn=y
CONFIG_PACKAGE_luci-i18n-tailscale-zh-cn=y
CONFIG_PACKAGE_luci-i18n-partexp-zh-cn=y
CONFIG_PACKAGE_luci-i18n-ddns-go-zh-cn=y
CONFIG_PACKAGE_luci-i18n-dockerman-zh-cn=y
#CONFIG_PACKAGE_luci-i18n-advancedplus-zh-cn=y
CONFIG_PACKAGE_luci-i18n-advancedsetting-zh-cn=y


CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y

# CPU 优化
CONFIG_TARGET_OPTIMIZATION="-O2 -pipe"
CONFIG_CPU_TYPE="generic"

# RootFS
CONFIG_TARGET_ROOTFS_EXT4FS=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_KERNEL_PARTSIZE=64
CONFIG_TARGET_ROOTFS_PARTSIZE=1024
CONFIG_TARGET_SQUASHFS_BLOCK_SIZE=128

########################################
# LuCI
########################################
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-argon-config-zh-cn=y
CONFIG_PACKAGE_luci-compat=y

########################################
# Basic Networking
########################################
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_pppoe=y
CONFIG_PACKAGE_ppp-mod-pppoe=y

########################################
# Docker
########################################
CONFIG_PACKAGE_dockerd=y
CONFIG_PACKAGE_docker=y
CONFIG_PACKAGE_docker-compose=y
CONFIG_PACKAGE_kmod-fs-overlay=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-veth=y
CONFIG_PACKAGE_kmod-nf-nat=y
CONFIG_PACKAGE_kmod-br-netfilter=y

# 启用 LuCI Web 界面的 Docker 管理界面
CONFIG_PACKAGE_luci-app-docker=y


########################################
# Filesystems
########################################
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-ntfs3=y
CONFIG_PACKAGE_kmod-fs-f2fs=y

########################################
# ACPI / Power
########################################
CONFIG_PACKAGE_acpid=y
CONFIG_PACKAGE_kmod-acpi-button=y
CONFIG_PACKAGE_kmod-acpi-fan=y
CONFIG_PACKAGE_kmod-acpi-processor=y
CONFIG_PACKAGE_kmod-acpi-cpu-hotplug=y

########################################
# Network Drivers（最稳 & 最常用）
########################################
CONFIG_PACKAGE_kmod-e1000=y
CONFIG_PACKAGE_kmod-e1000e=y
CONFIG_PACKAGE_kmod-igb=y
CONFIG_PACKAGE_kmod-r8169=y
CONFIG_PACKAGE_kmod-ixgbe=y

########################################
# 禁用显卡驱动（节省时间 + 避免失败）
########################################
CONFIG_PACKAGE_kmod-drm=n
CONFIG_PACKAGE_kmod-drm-i915=n
CONFIG_PACKAGE_kmod-drm-radeon=n
CONFIG_PACKAGE_kmod-drm-amdgpu=n
CONFIG_PACKAGE_kmod-fb=n
CONFIG_PACKAGE_kmod-backlight=n

########################################
# 统一 OpenSSL，避免冲突
########################################
CONFIG_PACKAGE_libopenssl=y
CONFIG_PACKAGE_libustream-openssl=y
CONFIG_PACKAGE_libustream-mbedtls=n
CONFIG_PACKAGE_wolfssl=n
CONFIG_PACKAGE_mbedtls=n

########################################
# Lua（只保留 5.3）
########################################
CONFIG_PACKAGE_lua5.3=y
CONFIG_PACKAGE_lua5.1=n
CONFIG_PACKAGE_lua5.4=n




########################################
# DNS: MosDNS（推荐）
########################################
CONFIG_PACKAGE_mosdns=y
CONFIG_PACKAGE_luci-app-mosdns=y

########################################
# IPv6 全套
########################################
CONFIG_PACKAGE_ipv6helper=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_kmod-ipv6=y

########################################
# Firewall: 使用 nftables（标准）
########################################
CONFIG_PACKAGE_nftables=y
CONFIG_PACKAGE_fw4=y
CONFIG_PACKAGE_iptables=n
CONFIG_PACKAGE_iptables-legacy=n

########################################
# BusyBox（默认最稳）
########################################
CONFIG_BUSYBOX_DEFAULT_HAVE_DOT_CONFIG=y
CONFIG_BUSYBOX_DEFAULT_FEATURE_SH_IS_NONE=y
