########################################
# 根文件系统和内核设置
########################################
CONFIG_TARGET_ROOTFS_EXT4FS=y             # 使用 ext4 文件系统作为根分区
CONFIG_TARGET_KERNEL_PARTSIZE=64         # 内核分区大小为 64MB
CONFIG_TARGET_ROOTFS_PARTSIZE=1024       # 根文件系统分区大小 1024MB

CONFIG_KERNEL_CFQ_GROUP_IOSCHED=y        # 内核 CFQ I/O 调度组
CONFIG_KERNEL_HUGETLBFS=y                # 支持 HugeTLB 文件系统
CONFIG_KERNEL_HUGETLB_PAGE=y             # 支持 HugeTLB 页面
CONFIG_KERNEL_MEMCG_SWAP_ENABLED=y       # 启用内存控制组 swap 支持
CONFIG_KERNEL_TRANSPARENT_HUGEPAGE=y     # 启用透明大页
CONFIG_KERNEL_TRANSPARENT_HUGEPAGE_ALWAYS=y # 总是使用透明大页

CONFIG_KERNEL_CGROUP_DEVICE=y            # 启用设备控制组
CONFIG_KERNEL_CGROUP_FREEZER=y           # 启用冻结控制组
CONFIG_KERNEL_CGROUP_HUGETLB=y           # 启用 HugeTLB 控制组
CONFIG_KERNEL_CGROUP_NET_PRIO=y          # 启用网络优先级控制组
CONFIG_KERNEL_CGROUP_PERF=y              # 启用性能计数控制组
CONFIG_KERNEL_NET_CLS_CGROUP=y           # 启用网络分类控制组
CONFIG_KERNEL_PERF_EVENTS=y              # 启用内核性能事件

CONFIG_CGROUPFS_MOUNT_KERNEL_CGROUPS=y   # 挂载内核 cgroup 文件系统


########################################
# IPv6 内核支持
########################################
CONFIG_IPV6=y                             # 启用内核 IPv6 核心功能（默认开启）
CONFIG_IPV6_MULTIPLE_TABLES=y             # 支持多路由表
CONFIG_IPV6_PRIVACY=y                      # 启用隐私扩展（临时 IPv6 地址）
CONFIG_IPV6_ROUTER_PREF=y                  # 支持路由首选项
CONFIG_IPV6_SUBTREES=y                     # 支持 IPv6 子树路由
CONFIG_IPV6_TUNNEL=y                       # 支持 IPv6 隧道
CONFIG_IPV6_TUNNEL_SIT=y                   # 6in4 隧道模块（SIT）
CONFIG_KMOD_SIT=y                           # SIT 内核模块
CONFIG_KMOD_IP6TABLES=y                     # IPv6 iptables 内核模块
CONFIG_KMOD_NF_IPT6=y                       # netfilter IPv6 支持
CONFIG_IP6_NF_IPTABLES=y                    # IPv6 iptables 用户空间支持
CONFIG_IP6_NF_FILTER=y                       # IPv6 防火墙过滤支持
CONFIG_IP6_NF_TARGET_REJECT=y               # IPv6 REJECT 支持
CONFIG_IP6_NF_NAT=y                         # IPv6 NAT 支持（如果有需要）
CONFIG_KMOD_UDPTUNNEL6=y                    # UDP over IPv6 隧道

########################################
# IPv6 LuCI / 协议支持
########################################
CONFIG_PACKAGE_luci-proto-ipv6=y            # LuCI IPv6 协议支持
CONFIG_PACKAGE_ipv6helper=y                 # LuCI IPv6 辅助工具
########################################


